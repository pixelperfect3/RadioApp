<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:gravity="center_vertical"
    android:background="#6495ed">
 
    <ImageView
        android:id="@+id/header"
        android:src="@drawable/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
 	<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_horizontal">
 		<TextView android:text="TextView" android:layout_width="wrap_content" android:textSize="20dip" 
 				android:layout_height="wrap_content" android:id="@+id/title" 
 				android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="5dip"
 				android:textStyle="bold"  android:textColor="@android:color/white"></TextView>
 		<ImageButton android:id="@+id/windowSearchButton" android:background="@android:drawable/ic_search_category_default" 
 				android:onClick="startSearch" android:layout_width="wrap_content" android:layout_height="wrap_content" 
 				android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="1dip"></ImageButton>
 		<ImageButton android:id="@+id/windowRefreshButton" android:background="@android:drawable/ic_popup_sync" 
 				android:onClick="refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" 
 				android:layout_centerVertical="true" android:layout_toLeftOf="@+id/windowSearchButton" android:layout_marginRight="10dip"></ImageButton>
 	</RelativeLayout>
 
</LinearLayout>