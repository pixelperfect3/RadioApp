<?xml version="1.0" encoding="utf-8"?>
<!--  Defines the look for the Main Activity -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<!-- Relative Layout holds everything -->
	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="20dip" android:layout_marginRight="15dip"
		android:layout_marginTop="30dip" android:layout_marginBottom="15dip">
		<!-- TextView for holding the app name -->
		<TextView android:text="On The Radio"
			android:layout_marginBottom="20dip" android:typeface="serif"
			android:textSize="25sp" android:textColor="#000000" android:id="@+id/mainLabel"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<!-- Search Button -->
		<!-- Info about the search text -->
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_height="wrap_content" android:layout_below="@+id/mainLabel"
			android:layout_width="fill_parent" android:gravity="center_vertical">
			<EditText android:id="@+id/searchBox" android:paddingBottom="5dip"
				android:paddingTop="10dip" android:paddingRight="0dip"
				android:paddingLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:inputType="text"
				android:lines="1" android:layout_weight="0.98" android:singleLine="true" />
			<ImageButton android:id="@+id/searchButton"
				android:background="@android:drawable/ic_menu_search"
				android:onClick="startSearch" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="0.01" />
			<ImageButton android:text="GPS" android:id="@+id/gpsButton"
				android:background="@android:drawable/ic_menu_mylocation"
				android:onClick="searchByGPS" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="0.01" />
			<!-- android:background="@android:color/white" -->
		</LinearLayout>

		<TextView android:text="@string/searchText" android:gravity="center"
			android:id="@+id/searchView1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#CFCFCF"
			android:layout_below="@id/linearLayout2" />


	</RelativeLayout>
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_gravity="fill_vertical" android:layout_width="fill_parent"
		android:layout_marginTop="5dp" android:layout_height="wrap_content"
		android:layout_marginLeft="100dp" android:orientation="vertical">
		<TextView android:text="Favorites:" android:typeface="serif"
			android:textSize="18sp" android:id="@+id/favoritesLabel"
			android:layout_width="wrap_content" android:textColor="#000000"
			android:layout_height="wrap_content" android:layout_marginLeft="15dp" />
		<ListView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/listView1" />
	</LinearLayout>
</LinearLayout>

